                              <Pane prefHeight="180.0" prefWidth="180.0" styleClass="music-box" />
                              <Label styleClass="recently-played-label" text="Jazz Track 4" />
                              <Label styleClass="music-box-artist" text="Jazz Artist 4" />
                           </VBox>
                        </children>
                     </HBox>
                     <HBox prefHeight="13.0">
                        <padding>
                           <Insets bottom="5.0" left="15.0" />
                        </padding>
                        <VBox.margin>
                           <Insets top="15.0" />
                        </VBox.margin>
                     </HBox>
                     <HBox prefHeight="100.0" />
                       </children>
                    </VBox>
                 </content>
              </ScrollPane>

              <!-- Second VBox - Music Detail Panel (1/3 screen) -->
              <ScrollPane fitToWidth="true" prefHeight="660.0" prefWidth="300.0" styleClass="scroll-pane" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" HBox.hgrow="NEVER">
                 <content>
                    <VBox minHeight="-Infinity" minWidth="-Infinity" styleClass="side_ankerpane" spacing="10.0">
                       <children>
                          <!-- Album Art / Cover -->
                          <Pane prefHeight="300.0" prefWidth="300.0" styleClass="played-pane" stylesheets="@../css/style.css">
                             <children>
                                <ImageView fx:id="detailAlbumCover" fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true">
                                   <image>
                                      <Image url="@../image/song1.jpg" />
                                   </image>
                                </ImageView>
                             </children>
                          </Pane>
                          
                          <!-- Song Information -->
                          <VBox spacing="5.0" styleClass="played-pane" stylesheets="@../css/style.css">
                             <children>
                                <Label fx:id="detailSongName" styleClass="recently-played-label" stylesheets="@../css/style.css" text="Song Name">
                                   <font>
                                      <Font size="16.0" />
