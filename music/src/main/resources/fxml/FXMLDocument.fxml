                                 <Image url="@../image/song2.jpg" />
                              </image>
                           </ImageView>
                           <VBox alignment="CENTER_LEFT" spacing="2">
                              <Label styleClass="recently-played-label" text="BL8M" />
                           </VBox>
                        </HBox>
                     </HBox>
            
                     <Label styleClass="recently-played-label" stylesheets="@../css/style.css" text="Recently Played Music">
