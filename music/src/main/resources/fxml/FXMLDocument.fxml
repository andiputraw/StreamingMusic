<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
   styleClass="root" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="com.apayah.music.frontend.controllers.FXMLDocumentController">
   <children>
      <!-- Main Content HBox with ScrollPane -->
      <HBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="660.0" prefWidth="1280.0"
         VBox.vgrow="ALWAYS">
         <children>
            <!-- First VBox for main content (expanded to fill space) -->
            <ScrollPane fitToWidth="true" prefHeight="660.0" styleClass="scroll-pane"
               hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" HBox.hgrow="ALWAYS">
               <content>
                  <VBox minHeight="-Infinity" minWidth="-Infinity" styleClass="side_ankerpane">
                     <children>

                        <!-- Box persegi panjang pertama -->
                        <StackPane styleClass="rectangle-box">
                           <children>
                              <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                                 minWidth="-Infinity" prefHeight="180.0" prefWidth="900.0"
                                 styleClass="inner-pane" stylesheets="@../css/style.css"
                                 translateY="6.0">
                                 <children>
                                    <ImageView
                                       fitWidth="900"
                                       fitHeight="180"
                                       preserveRatio="false"
                                    >
                                       <image>
                                          <Image url="@/image/banner.png" />
                                       </image>
                                    </ImageView>
                                 </children>
                              </Pane>
                           </children>
                        </StackPane>
                        <VBox alignment="CENTER_LEFT" spacing="10" />

                        <!-- Menambahkan HBox untuk membuat tombol bersebelahan -->
                        <HBox alignment="CENTER_LEFT" spacing="15">
                           <VBox.margin>
                              <Insets left="35.0" top="20.0" />
                           </VBox.margin>
                           <Button fx:id="playButton" minHeight="39.0" minWidth="41.0"
                              mnemonicParsing="false" prefHeight="37.0" prefWidth="37.0"
                              styleClass="circle-button" stylesheets="@../css/style.css">
                              <graphic>
                                 <ImageView fitHeight="23.0" fitWidth="23.0" pickOnBounds="true"
                                    preserveRatio="true">
                                    <Image url="@../image/playlist.png" />
                                 </ImageView>
                              </graphic>
                           </Button>
                           <Button fx:id="addSongButton" minHeight="39.0" minWidth="60.0"
                              mnemonicParsing="false" prefHeight="37.0" prefWidth="80.0"
                              styleClass="circle-dark-button" stylesheets="@../css/style.css"
                              text="+ Add">
                              <font>
                                 <Font size="10.0" />
                              </font>
                           </Button>
                        </HBox>

                        <!-- HBox for Title and Add Button -->
                        <HBox alignment="CENTER_LEFT" spacing="10">
                           <Label styleClass="recently-played-label" stylesheets="@../css/style.css"
                              text="Your Playlist">
                              <VBox.margin>
                                 <Insets left="35.0" />
                              </VBox.margin>
                           </Label>
                           <Button fx:id="addPlaylistButton" onAction="#onAddPlaylistButtonClick"
                              styleClass="circle-dark-button" text="+" />
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </HBox>

                        <!-- VBox for dynamic playlist items -->
                        <VBox fx:id="playlistContainer" spacing="10" translateY="10.0">
                           <VBox.margin>
                              <Insets left="45.0" right="45.0" top="10.0" />
                           </VBox.margin>
                        </VBox>

                        <HBox prefHeight="13.0">
                           <padding>
                              <Insets bottom="5.0" left="15.0" />
                           </padding>
                           <VBox.margin>
                              <Insets top="15.0" />
                           </VBox.margin>
                        </HBox>
                        <HBox prefHeight="1000.0" />
                     </children>
                  </VBox>
               </content>
            </ScrollPane>

            <!-- Second VBox - Music Detail Panel (1/3 screen) -->
            <ScrollPane fitToWidth="true" prefHeight="660.0" prefWidth="300.0"
               styleClass="scroll-pane" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" HBox.hgrow="NEVER">
               <content>
                  <VBox minHeight="-Infinity" minWidth="-Infinity" styleClass="side_ankerpane"
                     spacing="10.0">
                     <children>
                        <!-- Album Art / Cover -->
                        <Pane prefHeight="300.0" prefWidth="300.0" styleClass="played-pane"
                           stylesheets="@../css/style.css">
                           <children>
                              <ImageView fx:id="detailAlbumCover" fitHeight="300.0" fitWidth="300.0"
                                 pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../image/song1.jpg" />
                                 </image>
                              </ImageView>
                           </children>
                        </Pane>

                        <!-- Song Information -->
                        <VBox spacing="5.0" styleClass="played-pane" stylesheets="@../css/style.css">
                           <children>
                              <Label fx:id="detailSongName" styleClass="recently-played-label"
                                 stylesheets="@../css/style.css" text="Song Name">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Label>
                              <Label fx:id="detailArtistName" styleClass="categories-label"
                                 stylesheets="@../css/style.css" text="Artist Name" />
                              <Label fx:id="detailAlbumName" styleClass="categories-label"
                                 stylesheets="@../css/style.css" text="Album Name" />
                              <Label fx:id="detailDuration" styleClass="categories-label"
                                 stylesheets="@../css/style.css" text="Duration: 3:45" />
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>

                        <!-- Lyrics / Extra Info -->
                        <Pane prefHeight="500.0" prefWidth="150.0" styleClass="box-pane"
                           stylesheets="@../css/style.css">
                           <children>
                           </children>
                        </Pane>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
         </children>
      </HBox>

      <!-- Music Control Bar at Bottom -->
      <!-- Removed to avoid duplication with AppLayout's control bar -->

   </children>
</VBox>