                          <Pane prefHeight="150.0" prefWidth="150.0" styleClass="box-pane" stylesheets="@../css/style.css">
                             <children>
                             </children>
                          </Pane>
                       </children>
                       <padding>
                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                       </padding>
                    </VBox>
                 </content>
              </ScrollPane>
