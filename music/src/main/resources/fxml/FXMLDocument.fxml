                           <VBox alignment="TOP_LEFT" spacing="0">
                              <Pane prefHeight="180.0" prefWidth="180.0" styleClass="music-box" />
                              <Label styleClass="recently-played-label" text="Recommended 3" />
                              <Label styleClass="music-box-artist" text="Featured Artist 3" />
                           </VBox>
                           <VBox alignment="TOP_LEFT" spacing="0">
                              <Pane prefHeight="180.0" prefWidth="180.0" styleClass="music-box" />
