                        <VBox.margin>
                           <Insets left="35.0" top="20.0" />
                        </VBox.margin>
                        <Button fx:id="playButton" minHeight="39.0" minWidth="41.0" mnemonicParsing="false" prefHeight="37.0" prefWidth="37.0" styleClass="circle-button" stylesheets="@../css/style.css">
