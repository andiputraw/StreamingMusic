                        <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="400.0" styleClass="playlist-box" spacing="12" onMouseClicked="#onPlaylistItemClicked">
                           <ImageView fitHeight="44.0" fitWidth="44.0" styleClass="playlist-image">
