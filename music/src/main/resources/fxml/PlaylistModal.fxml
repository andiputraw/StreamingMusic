<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.apayah.music.frontend.controllers.PlaylistModalController"
        stylesheets="@../css/darkmodal.css"
           styleClass="modal-backdrop">

    <!-- Centered Modal -->
    <VBox alignment="CENTER" spacing="25"
          maxWidth="380"
          styleClass="modal-panel">

        <Label text="Create New Playlist" style="-fx-font-size: 18px; -fx-text-fill: white;"/>
        <TextField fx:id="playlistNameField" promptText="Enter playlist name" />

        <ScrollPane fitToWidth="true"
                    styleClass="modal-scroll" visible="false">
            <VBox fx:id="radioContainer" spacing="14"
                  styleClass="modal-list"/>
        </ScrollPane>

        <HBox spacing="16" alignment="CENTER">
            <Button text="Cancel" onAction="#onCancel"
                    styleClass="modal-btn-cancel"/>
            <Button text="Create" onAction="#onOk"
                    styleClass="modal-btn-confirm"/>
        </HBox>

    </VBox>

</StackPane>
