<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane id="AnchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="90.0" minWidth="-Infinity" prefHeight="90.0" prefWidth="1280.0" styleClass="music-control-bar" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.apayah.music.frontend.controllers.ControlFXMLController">
   <children>
      <!-- Main Music Control Bar -->
      <VBox alignment="CENTER" spacing="3.0" styleClass="music-control-bar">
         <children>
      <!-- Top Row: Album Cover + Song Info + Control Buttons -->
      <HBox alignment="CENTER" spacing="8.0">
         <children>
            <!-- Album Cover -->
            <ImageView fx:id="albumCoverImage" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/song1.jpg" />
               </image>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </ImageView>
            
            <!-- Song Info -->
            <VBox alignment="CENTER_LEFT" prefWidth="150.0" spacing="1.0">
               <children>
                  <Label fx:id="songTitleLabel" styleClass="song-title" text="Tears">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="artistLabel" styleClass="artist-name" text="Sabrina Carpenter">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            
            <!-- Control Buttons Container -->
            <HBox alignment="CENTER" prefHeight="39.0" prefWidth="280.0" spacing="5.0">
               <children>
                  
                  <!-- Previous Button -->
                  <Button fx:id="previousButton" mnemonicParsing="false" onAction="#onPreviousAction" prefHeight="30.0" prefWidth="30.0" styleClass="control-button">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0">
                           <image>
                              <Image url="@../image/prev.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  
                  <!-- Play/Pause Button -->
                  <Button fx:id="playPauseButton" mnemonicParsing="false" onAction="#onPlayPauseAction" prefHeight="32.0" prefWidth="32.0" styleClass="play-pause-button">
                     <graphic>
                        <ImageView fx:id="playPauseIcon" fitHeight="22.0" fitWidth="22.0">
                           <image>
                              <Image url="@../image/play.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  
                  <!-- Next Button -->
                  <Button fx:id="nextButton" mnemonicParsing="false" onAction="#onNextAction" prefHeight="30.0" prefWidth="30.0" styleClass="control-button">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0">
                           <image>
                              <Image url="@../image/next.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  
                  <!-- Queue Button -->
                  <Button fx:id="queueButton" mnemonicParsing="false" onAction="#onQueueAction" prefHeight="30.0" prefWidth="35.0" styleClass="control-button-queue">
                     <graphic>
                        <ImageView fitHeight="18.0" fitWidth="18.0">
                           <image>
                              <Image url="@../image/queue.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  
                  <!-- Add to Playlist Button -->
                  <Button fx:id="addToPlaylistButton" mnemonicParsing="false" onAction="#showAddToPlaylistModal" prefHeight="28.0" prefWidth="50.0" styleClass="add-button" text="Add">
                     <font>
                        <Font size="9.0" />
                     </font>
                  </Button>
               </children></HBox>
            
            <!-- Shuffle Button -->
            <Button fx:id="shuffleButton" mnemonicParsing="false" onAction="#onShuffleAction" prefHeight="25.0" prefWidth="25.0" styleClass="control-button-shuffle">
               <graphic>
                  <ImageView fitHeight="14.0" fitWidth="14.0">
                     <image>
                        <Image url="@../image/queue.png" />
                     </image>
                  </ImageView>
               </graphic>
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      
      <!-- Bottom Row: Time + Progress Slider + Time -->
      <HBox alignment="CENTER" spacing="8.0">
         <children>
            <!-- Spacer left -->
            <HBox prefWidth="30.0" />
            
            <!-- Current Time -->
            <Label fx:id="currentTimeLabel" styleClass="time-label" text="0:00">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
            
            <!-- Progress Slider -->
            <Slider fx:id="progressSlider" max="240.0" onMouseClicked="#onProgressSliderClicked" onMouseDragged="#onProgressSliderDragged" prefHeight="10.0" prefWidth="350.0" styleClass="progress-slider" value="146.0" HBox.hgrow="ALWAYS" />
            
            <!-- Total Time -->
            <Label fx:id="totalTimeLabel" styleClass="time-label" text="4:00">
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
            
            <!-- Spacer right -->
            <HBox prefWidth="30.0" />
         </children>
      </HBox>
         </children>
         <padding>
            <Insets bottom="3.0" left="8.0" right="8.0" top="3.0" />
         </padding>
      </VBox>
      
      <!-- Add to Playlist Modal (Hidden by default) -->
      <StackPane fx:id="modalOverlay" styleClass="modal-overlay" visible="false">
         <children>
            <VBox alignment="CENTER" maxHeight="400.0" maxWidth="350.0" minHeight="400.0" minWidth="350.0" styleClass="modal-content" stylesheets="@style.css">
               <children>
                  <!-- Modal Header -->
                  <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="350.0" styleClass="modal-header">
                     <children>
                        <Label styleClass="modal-title" text="Add to Playlist">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="closeModalButton" mnemonicParsing="false" onAction="#hideAddToPlaylistModal" styleClass="close-button" text="âœ•">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="15.0" top="15.0" />
                     </padding>
                  </HBox>
                  
                  <!-- Playlist Selection Area -->
                  <ScrollPane fitToWidth="true" prefHeight="250.0" prefWidth="350.0" styleClass="playlist-scroll">
                     <content>
                        <VBox fx:id="playlistContainer" spacing="8.0" styleClass="playlist-container">
                           <children>
                              <!-- Example Playlist Options -->
                              <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="playlist-item">
                                 <children>
                                    <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true" styleClass="playlist-image">
                                       <image>
                                          <Image url="@../image/sSPH844ILIt_large.jpg" />
                                       </image>
                                    </ImageView>
                                    <VBox alignment="CENTER_LEFT" spacing="2.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label styleClass="playlist-name" text="BL8M">
                                             <font>
                                                <Font name="System Bold" size="14.0" />
                                             </font>
                                          </Label>
                                          <Label styleClass="playlist-info" text="5 songs">
                                             <font>
                                                <Font size="12.0" />
                                             </font>
                                          </Label>
                                       </children>
                                    </VBox>
                                    <RadioButton fx:id="playlist1Radio" mnemonicParsing="false" />
                                 </children>
                                 <padding>
                                    <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                                 </padding>
                              </HBox>
                              
                              <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="playlist-item">
                                 <children>
                                    <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true" styleClass="playlist-image">
                                       <image>
                                          <Image url="@../image/song2.jpg" />
                                       </image>
                                    </ImageView>
                                    <VBox alignment="CENTER_LEFT" spacing="2.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label styleClass="playlist-name" text="My Favorites">
                                             <font>
                                                <Font name="System Bold" size="14.0" />
                                             </font>
                                          </Label>
                                          <Label styleClass="playlist-info" text="12 songs">
                                             <font>
                                                <Font size="12.0" />
                                             </font>
                                          </Label>
                                       </children>
                                    </VBox>
                                    <RadioButton fx:id="playlist2Radio" mnemonicParsing="false" />
                                 </children>
                                 <padding>
                                    <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                                 </padding>
                              </HBox>
                              
                              <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="playlist-item">
                                 <children>
                                    <ImageView fitHeight="45.0" fitWidth="45.0" pickOnBounds="true" preserveRatio="true" styleClass="playlist-image">
                                       <image>
                                          <Image url="@../image/song1.jpg" />
                                       </image>
                                    </ImageView>
                                    <VBox alignment="CENTER_LEFT" spacing="2.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <Label styleClass="playlist-name" text="Chill Vibes">
                                             <font>
                                                <Font name="System Bold" size="14.0" />
                                             </font>
                                          </Label>
                                          <Label styleClass="playlist-info" text="8 songs">
                                             <font>
                                                <Font size="12.0" />
                                             </font>
                                          </Label>
                                       </children>
                                    </VBox>
                                    <RadioButton fx:id="playlist3Radio" mnemonicParsing="false" />
                                 </children>
                                 <padding>
                                    <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                                 </padding>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </content>
                  </ScrollPane>
                  
                  <!-- Modal Buttons -->
                  <HBox alignment="CENTER" prefHeight="60.0" prefWidth="350.0" spacing="15.0">
                     <children>
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#hideAddToPlaylistModal" prefHeight="35.0" prefWidth="80.0" styleClass="cancel-button" text="Cancel">
                           <font>
                              <Font size="12.0" />
                           </font>
                        </Button>
                        <Button fx:id="confirmAddButton" mnemonicParsing="false" onAction="#addToSelectedPlaylist" prefHeight="35.0" prefWidth="80.0" styleClass="confirm-button" text="Add">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="15.0" top="15.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </children>
      </StackPane>
   </children>
</StackPane>
